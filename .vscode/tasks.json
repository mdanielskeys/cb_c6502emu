{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
                    "\"C:/Program Files/Microsoft Visual Studio/2022/Community/Common7/Tools/VsDevCmd.bat\"",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/I \"${workspaceFolder}\\include\"",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${workspaceFolder}\\src\\tests\\emutest.c",
                "${workspaceFolder}\\src\\c6502\\ccbRamBus.c",
                "${workspaceFolder}\\src\\c6502\\c6502.c"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "includePath": [
                    "${workspaceFolder}/include",
                    "${workspaceFolder}/src, ${workspaceFolder}/src/c6502, ${workspaceFolder}/src/tests"
                ]
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}